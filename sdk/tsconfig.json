{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "target": "esnext",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "preserveConstEnums": true,
    "sourceMap": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}